@model IEnumerable<ShipbuildingRollingWeb.Models.DB.DrawingDB>

@{
    ViewBag.Title = "Index";
}

@section styles{
    @Styles.Render("~/Content/navbar.css");
}

@section Body {

<div class="container db-content">
    <div class="row">

        <table class="table table-hover col-sm-12">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Format)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BodyFragmentDB.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CompanyDB.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Format)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BodyFragmentDB.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyDB.Name)
                    </td>
                    @if (ViewBag.Admin)
                    {
                        <td>
                            @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Подробнее", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
                        </td>
                    }
                </tr>
            }

        </table>

        @if (ViewBag.Admin)
        {
            <div class="btn btn-default" role="button">
                @Html.ActionLink("Добавить", "Create")
            </div>
        }

    </div>
</div>
}
