@model IEnumerable<ShipbuildingRollingWeb.Models.DB.CompanyDB>

@{
    ViewBag.Title = "Index";
}

@section styles{
    @Styles.Render("~/Content/navbar.css");
}

@section Body {

    <div class="container db-content">
        <div class="row">

            <table class="table table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Address)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Specialization)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Specialization)
                        </td>
                        @if (ViewBag.Admin)
                        {
                            <td>
                                @Html.ActionLink("Редактировать", "Edit", new { id = item.ID }) |
                                @Html.ActionLink("Подробнее", "Details", new { id = item.ID }) |
                                @Html.ActionLink("Удалить", "Delete", new { id = item.ID })
                            </td>
                        }
                    </tr>
                }

            </table>
            @if (ViewBag.Admin)
            {
                <div class="btn btn-default" role="button">
                    @Html.ActionLink("Добавить", "Create")
                </div>
            }
        </div>
    </div>
}
